{
  "Configuration": {
    "Appenders": {
      "appender": [{
        "type": "RollingFile",
        "name": "oauth-log",
        "fileName": "${sys:catalina.base}/logs/oauth/oauth.log4j",
        "filePattern": "${sys:catalina.base}/logs/oauth/${date:yyyy-MM-dd}-%i.oauth.log4j",
        "append": "true",
        "PatternLayout": { "pattern": "%-9r [%-5p] [${date:dd/MMM/yyyy|HH:mm:ss}] - %C:%L - %m%n" },
        "Policies": {
          "TimeBasedTriggeringPolicy": { "modulate": "true" },
          "SizeBasedTriggeringPolicy": { "size": "100 MB" }
        },
        "DefaultRolloverStrategy": { "max": "3" }
      },{
        "type": "Console",
        "name": "STDOUT",
        "target": "SYSTEM_OUT",
        "PatternLayout": { "pattern": "%-9r [%-5p] [${date:dd/MMM/yyyy|HH:mm:ss}] - %C:%L - %m%n" }
      }]
    },
    "Loggers": {
      "Logger": [{
        "name": "org.apache",
        "level": "warn"
      },{
        "name": "org.apache.catalina.core",
        "level": "info"
      },{
        "name": "org.gusdb",
        "level": "info"
      },{
        "name": "org.gusdb.oauth2.assets.StaticResource",
        "level": "info"
      }],
      "Root": {
        "level": "warn",
        "AppenderRef": { "ref": "oauth-log" }
      }
    }
  }
}
